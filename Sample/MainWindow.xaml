<Window x:Class="Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <Grid DockPanel.Dock="Bottom" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Command="{Binding Load}">Load Segoe UI</Button>
            <!--<Button Grid.Column="1" Command="{Binding Rasterize}">Rasterize</Button>-->
        </Grid>
        
        <StackPanel DockPanel.Dock="Top">
            <Slider DockPanel.Dock="Top" Minimum="0" Maximum="{Binding Typeface.Glyphs.Count}" Value="{Binding SelectedGlyph}" />            
            <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <Image Source="{Binding Raster}" Stretch="Uniform" />
        
